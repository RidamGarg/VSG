<%- layout('./layout/boilerplate') %> 
<div class="container">
    <div class="row">
      <h2 class="text-center mb-3">Your Holdings</h2>
        <div class="col-12 col-md-10 col-lg-8 offset-md-1 offset-lg-2">
            <div class="card shadow mt-3 mb-5">
              <div class="card-body">
                <ul class="list-group list-group-horizontal text-center border-0">
                  <li class="list-group-item flex-fill border-0">
                    <span class="text-muted">
                      Invested
                    </span>
                    <h5>
                      <span class="fw-bold">&#8377;</span><%= totalInvested.toFixed(2) %> 
                    </h5>
                  </li>
                  <li class="list-group-item flex-fill border-0">
                    <span class="text-muted">
                      Current Value
                    </span>
                    <h5>
                      <span class="fw-bold">&#8377;</span><%= currentValue.toFixed(2) %> 
                    </h5>
                  </li>
                  <li class="list-group-item flex-fill border-0">
                    <span class="text-muted">
                      Total Returns
                    </span>
                    <h5 class="<%= currentValue-totalInvested>0?'text-success':'text-danger' %>">
                      <span class="fw-bold">&#8377;</span><%= currentValue-totalInvested>0?`+${(currentValue-totalInvested).toFixed(2)}`:(currentValue-totalInvested).toFixed(2) %>
                    </h5>
                  </li>
                </ul>
              </div>
            </div>
                <table class="table table-striped table-hover fs-5 text-center">
                  <thead>
                    <tr>
                      <th scope="col">Company</th>
                      <th scope="col">Invested</th>
                      <th scope="col">Current</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(let i = 0 ;i<allStocks.length;i++){ %> 
                          <tr class="getClick" data-bs-href="<%= allStocks[i].name %>">
                            <td>
                              <%= allStocks[i].name %>
                               <p class="lead fs-6 mb-0 mt-1"><%= allStocks[i].volume %> shares</p> 
                            </td>
                            <td><span class="fw-bold">&#8377;</span><%= (allStocks[i].volume*allStocks[i].average).toFixed(2) %></td>
                            <td class="<%= (allStocks[i].volume*result[i].lastPrice)-(allStocks[i].volume*allStocks[i].average)>0?'text-success':'text-danger' %>">
                              <span class="fw-bold">&#8377;</span><%= (allStocks[i].volume*result[i].lastPrice).toFixed(2) %>
                            </td>
                          </tr>
                      <% } %> 
                  </tbody>
                </table>
        </div>
    </div>
</div>