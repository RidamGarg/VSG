<%- layout('./layout/boilerplate') %> 
    <div class="container">
        <!-- <h1 class="text-center my-2"><%= result[0].symbol %></h1> -->
        <div class="row">
          <div class="col-12">
            <div class="card stockIndices">
              <div class="card-body text-center">
                <h2 class="card-title symbol"><%= result[0].symbol %></h2>
                <h4 class="card-title mb-2"><%= result[0].lastPrice.toFixed(2) %></h4>
                <h5 class="card-subtitle mb-3 <%= result[0].change>0?'text-success':'text-danger' %>">
                  <%= result[0].change>0?`+${result[0].change.toFixed(2)}`:result[0].change.toFixed(2) %>(<%= result[0].pChange.toFixed(2)>0?result[0].pChange.toFixed(2):-result[0].pChange.toFixed(2) %>%)
                </h5>
                <ul class="list-group list-group-horizontal">
                  <li class="list-group-item flex-fill border-0 px-0 py-0">
                    <h5>Open</h5>
                    <span><%= result[0].open %></span>
                  </li>
                  <li class="list-group-item flex-fill border-0 px-0 py-0">
                    <h5>Prev. Close</h5>
                    <span><%= result[0].previousClose %></span>
                  </li>
                  <li class="list-group-item flex-fill border-0 px-0 py-0">
                    <h5>Volume</h5>
                    <span><%= result[0].totalTradedVolume %></span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="row justify-content-center my-4">
        <%  for(let i = 1 ;i<result.length;i+=3){ %> 
                <% for(let j = i;j-i<3&&j<result.length;j++){ %>
                  <% if(result[j]){ %> 
                    <div class="col-sm-6 col-md-4 col-lg-3 my-2">
                 <div class="card stockIndices">
                     <div class="card-body text-center">
                       <h5 class="card-title mb-3 symbol"><%= result[j].symbol %></h5>
                       <h5 class="card-title mb-2"><span class="fw-bolder">&#8377;</span><%= result[j].lastPrice.toFixed(2) %></h5>
                       <h6 class="card-subtitle mb-2 <%= result[j].change>0?'text-success':'text-danger' %>">
                        <%= result[j].change>0?`+${result[j].change.toFixed(2)}`:result[j].change.toFixed(2) %>(<%= result[j].pChange.toFixed(2)>0?result[j].pChange.toFixed(2):-result[j].pChange.toFixed(2) %>%)
                       </h6>
                       <ul class="list-group list-group-flush">
                        <li class="list-group-item text-muted">Open: <span class="fw-bold">&#8377;</span><%= result[j].open %></li>
                        <li class="list-group-item text-muted">Prev. Close: <span class="fw-bold">&#8377;</span><%= result[j].previousClose %></li>
                        <li class="list-group-item text-muted">Volume: <%= result[j].totalTradedVolume %></li>
                      </ul>
                     </div>
                   </div>
                </div>
                <%} } }%>
            </div> 
    </div>
    
