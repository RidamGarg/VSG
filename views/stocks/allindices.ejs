<%- layout('./layout/boilerplate') %> 
<!-- <h1><% `nifty!${allIndices[1].split(' ').join('!')}` %></h1> -->
<h1 class="text-center my-3">Get On To Your Virtual Trade Today!</h1>
<div class="container">
    <div class="row justify-content-center my-3">
    <%  for(let i = 0 ;i<result.length;i+=3){ %> 
            <% for(let j = i;j-i<3&&j<result.length;j++){ %>
                <% if(result[j]){ %> 
                <div class="col-sm-6 col-md-4 col-lg-3 my-3">
             <div class="card niftyIndices">
                 <div class="card-body text-center">
                   <h5 class="card-title mb-3 symbol"><%= result[j].symbol %></h5>
                   <h5 class="card-title mb-2"><%= result[j].lastPrice.toFixed(2) %></h5>
                    <h6 class="card-subtitle mb-2 <%= result[j].change>0?'text-success':'text-danger' %>">
                      <%= result[j].change>0?`+${result[j].change.toFixed(2)}`:result[j].change.toFixed(2) %>(<%= result[j].pChange.toFixed(2)>0?result[j].pChange.toFixed(2):-result[j].pChange.toFixed(2) %>%)
                    </h6>
                       <ul class="list-group list-group-flush">
                        <li class="list-group-item text-muted">Open: <%= result[j].open %></li>
                        <li class="list-group-item text-muted">Prev. Close: <%= result[j].previousClose %></li>
                        <li class="list-group-item text-muted">Volume: <%= result[j].totalTradedVolume %></li>
                      </ul>
                 </div>
               </div>
            </div>
            <% } } }%>
        </div>
     </div>
